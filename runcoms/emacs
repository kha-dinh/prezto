  )

(defun my-org-mode-hook ()
  "My org mode hook."
  (add-hook 'completion-at-point-functions 'pcomplete-completions-at-point nil t)
  (setq org-support-shift-select t)
  (setq org-src-tab-acts-natively t)
  )
(add-hook 'org-mode-hook #'my-org-mode-hook)

